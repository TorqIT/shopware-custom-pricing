<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Cascade API Wrapper -->
        <service id="Torq\Shopware\CustomPricing\Service\CascadeApiWrapper">
            <argument type="service" id="http_client" />
            <argument type="service" id="logger" />
            <argument>%env(CASCADE_API_USERNAME)%</argument>
            <argument>%env(CASCADE_API_PASSWORD)%</argument>
        </service>

        <!-- External Price API Service -->
        <service id="Torq\Shopware\CustomPricing\Service\ExternalPriceApiService">
            <argument type="service" id="Torq\Shopware\CustomPricing\Service\CascadeApiWrapper"/>
        </service>

        <!-- Custom Price Collector Decorator -->
        <service id="Torq\Shopware\CustomPricing\Service\CustomPriceCollectorDecorator" decorates="Shopware\Commercial\CustomPricing\Domain\CustomPriceCollector">
            <argument type="service" id=".inner"/>
            <argument type="service" id="Torq\Shopware\CustomPricing\Service\CustomPriceProvider"/>
        </service>
    </services>
</container>
